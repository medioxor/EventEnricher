[Version]
Signature = "$WINDOWS NT$"
PnpLockdown = 1
; https://learn.microsoft.com/en-us/previous-versions/windows/drivers/ifs/file-system-filter-driver-classes-and-class-guids
Class = "ActivityMonitor"
ClassGuid = {b86dff51-a31e-4bac-b3cf-e8cfe75c9fc2}
Provider = %ManufacturerName%
DriverVer = 1/1/2025,0.0.0.1
CatalogFile = EventEnricher.cat

; https://learn.microsoft.com/en-us/windows-hardware/drivers/install/using-dirids
[DestinationDirs]
DefaultDestDir = 12
EventEnricher.DriverFiles = 12

[DefaultInstall.NTamd64]
OptionDesc          = %ServiceDescription%
CopyFiles           = EventEnricher.DriverFiles

[DefaultInstall.Services]
AddService          = %ServiceName%,,EventEnricher.Service

[DefaultUninstall.NTamd64]
DelFiles            = EventEnricher.DriverFiles
LegacyUninstall     = 1

; https://learn.microsoft.com/en-us/windows-hardware/drivers/ifs/creating-an-inf-file-for-a-minifilter-driver#serviceinstall-section-required
[EventEnricher.Service]
DisplayName         = %ServiceDescription%
Description			= %ServiceDescription%
ServiceType         = 1
StartType           = 3
ErrorControl        = 1
ServiceBinary       = %12%\EventEnricher.sys
AddReg              = EventEnricher.AddRegistry

[EventEnricher.AddRegistry]
HKR,,"DebugFlags",0x00010001 ,0x0
HKR,,"SupportedFeatures",0x00010001,0x3
HKR,"Instances","DefaultInstance",0x00000000,%DefaultInstance%
HKR,"Instances\"%Instance1.Name%,"Altitude",0x00000000,%Instance1.Altitude%
HKR,"Instances\"%Instance1.Name%,"Flags",0x00010001,%Instance1.Flags%


[EventEnricher.DriverFiles]
%DriverName%.sys

[SourceDisksFiles]
EventEnricher.sys = 1,,

[SourceDisksNames]
1 = %DiskId1%,,,

[Strings]
ManufacturerName        = "Medioxor"
ServiceDescription      = "EventEnricher Driver"
ServiceName             = "EventEnricherDrv"
DriverName              = "EventEnricher"
DiskId1                 = "EventEnricher Disk"
DefaultInstance         = "EventEnricher Instance"
Instance1.Name          = "EventEnricher Instance"
Instance1.Altitude      = "381337"; https://learn.microsoft.com/en-us/windows-hardware/drivers/ifs/load-order-groups-and-altitudes-for-minifilter-drivers#types-of-load-order-groups-and-their-altitude-ranges
Instance1.Flags         = 0x0              ; Allow all attachments